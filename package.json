    "testnet:deploy": "hardhat deploy --tags Greeter --network rinkeby",
    "mainnet:deploy": "hardhat deploy --tags Greeter --network mainnet",
    "t:verify": "hardhat --network rinkeby etherscan-verify --sleep",
